{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "primarysqlserverName": {
            "type": "string"
        },
        "failoversqlserverName": {
            "type": "string"
        },

        "primarydatabaseName": {
            "type": "string"
        },

        "failoverGRP": {
            "type": "string",
            "defaultValue": "recoverydatabase"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Sql/servers/failoverGroups",
            "apiVersion": "2015-05-01-preview",
            "name": "[parameters('failoverGRP')]",
            "properties": {
                "serverName": "[parameters('primarysqlserverName')]",
                "partnerServers": [
                    {
                        "id": "[resourceId('Microsoft.Sql/servers', parameters('failoversqlserverName'))]"
                    }
                ],

                "readWriteEndpoint": {
                    "failoverPolicy": "Automatic",
                    "failoverWithDataLossGracePeriodMinutes": 60
                },
                "readOnlyEndpoint": {
                    "failoverPolicy": "Disabled"
                },
                "databases": [
                    "[resourceId('Microsoft.Sql/servers/databases', parameters('primarysqlserverName'), parameters('primarydatabaseName'))]"
                ]
            },
            "dependsOn": [
                "[parameters('primarysqlserverName')]",
                "[resourceId('Microsoft.Sql/servers/databases', parameters('primarysqlserverName'), parameters('primarydatabaseName'))]",
                "[resourceId('Microsoft.Sql/servers', parameters('failoversqlserverName'))]"
            ]
        }
    ],
    "outputs": {}
}